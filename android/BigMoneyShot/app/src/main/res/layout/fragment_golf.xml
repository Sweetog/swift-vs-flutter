<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    tools:context=".ui.GolfCourseFragment">

    <ImageView
        android:id="@+id/image_golf_course"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/golf_course_sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_golf_course_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="La Jolla Country Club"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_header"
        android:fontFamily="@font/latobold"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_golf_course" />

    <LinearLayout
        android:id="@+id/hole_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_golf_course_name">

        <TextView
            android:id="@+id/text_view_hole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7th Hole"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center_vertical"
            android:text="-"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/text_view_par"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Par 3"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center_vertical"
            android:text="-"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/text_view_yards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="148 yards"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_win_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="Win $10,000"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/latobold"
        android:textColor="@color/off_white_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hole_layout" />

    <Button
        android:id="@+id/button_buy_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="60dp"
        android:text="$5 Buy In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_win_1" />

    <TextView
        android:id="@+id/text_view_win_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="8dp"
        android:text="Win $20,000"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/latobold"
        android:textColor="@color/off_white_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_buy_1" />

    <Button
        android:id="@+id/button_buy_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginEnd="60dp"
        android:text="$10 Buy In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_win_2" />
</androidx.constraintlayout.widget.ConstraintLayout>