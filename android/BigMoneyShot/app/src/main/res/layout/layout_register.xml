<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/default_background"
        android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_80"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:orientation="vertical">
        <EditText
                android:id="@+id/inputfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginedittextbg"
                android:hint="@string/strfirstname"
                android:padding="@dimen/padding_10"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:textColorHint="@color/md_black_1000"
                android:textColor="@color/md_black_1000"/>
        <EditText
                android:id="@+id/inputlastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginedittextbg"
                android:hint="@string/strlastName"
                android:padding="@dimen/padding_10"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:textColorHint="@color/md_black_1000"
                android:textColor="@color/md_black_1000"/>
        <EditText
                android:id="@+id/inputbirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginedittextbg"
                android:hint="@string/strbirthday"
                android:padding="@dimen/padding_10"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:textColorHint="@color/md_black_1000"
                android:textColor="@color/md_black_1000"/>
        <EditText
                android:id="@+id/inputemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginedittextbg"
                android:hint="@string/fui_idp_name_email"
                android:padding="@dimen/padding_10"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:textColorHint="@color/md_black_1000"
                android:textColor="@color/md_black_1000"/>
        <Button
                android:id="@+id/btncontinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:text="@string/strcontinue"
                android:textColor="@color/golden"
                android:textAllCaps="false"
                android:background="@drawable/button"/>
        <TextView
                android:id="@+id/disclaimer"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_8"
                android:textColor="@color/loginsignupbgcolor"
                android:clickable="true"
                android:textSize="@dimen/text_size_normal"
        />

    </LinearLayout>
    </ScrollView>
    <ProgressBar
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/margin_60"
            android:layout_height="@dimen/margin_60"
            android:id="@+id/progress_bar"
    />

</RelativeLayout>